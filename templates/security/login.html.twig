{% extends 'base_admin.html.twig' %}

{% block title %}Iniciar Sesión - SEX SHOP
{% endblock %}

{% block body %}
	<div class="min-h-screen bg-[#181114] flex flex-col justify-center py-12 sm:px-6 lg:px-8 bg-[url('/assets/images/pattern-dark.png')] bg-repeat">
		<div class="sm:mx-auto sm:w-full sm:max-w-md">
			<h2 class="mt-6 text-center text-3xl font-extrabold text-white">
				Iniciar Sesión
			</h2>
			<p class="mt-2 text-center text-sm text-gray-400">
				Bienvenido de nuevo a nuestra colección exclusiva.
			</p>
		</div>

		<div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
			<div
				class="bg-[#241a1f] py-8 px-4 shadow-2xl sm:rounded-xl sm:px-10 border border-[#ec1380]/20 relative overflow-hidden">
				<!-- Decorative gradient blur -->
				<div class="absolute top-0 right-0 -mr-20 -mt-20 w-40 h-40 rounded-full bg-[#ec1380] opacity-10 blur-3xl"></div>
				<div class="absolute bottom-0 left-0 -ml-20 -mb-20 w-40 h-40 rounded-full bg-[#ec1380] opacity-10 blur-3xl"></div>

				<form method="post" class="space-y-6 relative z-10">
					{% if error %}
						<div class="bg-red-500/10 border border-red-500/50 text-red-500 px-4 py-3 rounded-lg relative mb-6 backdrop-blur-sm" role="alert">
							<span class="block sm:inline">{{ error.messageKey|trans(error.messageData, 'security') }}</span>
						</div>
					{% endif %}

					{% if app.user %}
						<div class="mb-3 text-sm text-gray-300">
							Has iniciado sesión como
							{{ app.user.userIdentifier }},
							<a href="{{ logout_path() }}" class="text-[#ec1380] hover:text-[#ff1a90]">Cerrar sesión</a>
						</div>
					{% endif %}

					<div>
						<label for="username" class="block text-sm font-medium text-gray-300">Correo Electrónico</label>
						<div class="mt-1">
							<input type="email" value="{{ last_username }}" name="_username" id="username" class="appearance-none block w-full px-3 py-3 border border-gray-700 rounded-lg shadow-sm placeholder-gray-500 bg-[#181114] text-white focus:outline-none focus:ring-2 focus:ring-[#ec1380] focus:border-transparent transition-all duration-200" autocomplete="email" placeholder="tu@email.com" required autofocus>
						</div>
					</div>

					<div>
						<label for="password" class="block text-sm font-medium text-gray-300">Contraseña</label>
						<div class="mt-1">
							<input type="password" name="_password" id="password" class="appearance-none block w-full px-3 py-3 border border-gray-700 rounded-lg shadow-sm placeholder-gray-500 bg-[#181114] text-white focus:outline-none focus:ring-2 focus:ring-[#ec1380] focus:border-transparent transition-all duration-200" autocomplete="current-password" placeholder="••••••••" required>
						</div>
					</div>

					<input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">

					<div>
						<button type="submit" class="w-full flex justify-center py-3 px-4 border border-transparent rounded-lg shadow-lg text-sm font-bold text-white bg-[#ec1380] hover:bg-[#d01070] hover:scale-[1.02] transform focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#ec1380] focus:ring-offset-[#241a1f] transition-all duration-300">
							Acceder
						</button>
					</div>
				</form>

				<div class="mt-6 text-center">
					<p class="text-sm text-gray-400">
						¿No tienes cuenta?
						<a href="/register" class="font-medium text-[#ec1380] hover:text-[#ff1a90] transition-colors">
							Regístrate aquí
						</a>
					</p>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
