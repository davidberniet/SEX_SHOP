{% extends 'base.html.twig' %}

{% block title %}Gestión de Productos{% endblock %}

{% block body %}
    <main class="flex-1 bg-gradient-to-b from-background-dark to-surface-dark">
        <div class="mx-auto max-w-7xl px-4 py-12 sm:px-6 lg:px-8">
            <!-- Encabezado -->
            <div class="mb-8 flex items-center justify-between">
                <div>
                    <h1 class="text-3xl font-bold tracking-tight">Gestión de Productos</h1>
                    <p class="mt-2 text-sm text-slate-400">{{ productos|length }} producto(s) encontrado(s)</p>
                </div>
                <a href="{{ path('app_producto_new') }}" class="inline-flex items-center gap-2 rounded-lg bg-primary px-4 py-2 font-semibold text-white hover:bg-pink-600 transition-colors">
                    <span class="material-symbols-outlined">add</span>
                    Nuevo Producto
                </a>
            </div>

            <!-- Filtros de Búsqueda -->
            <div class="mb-8 rounded-lg border border-border-dark bg-surface-dark p-6 shadow">
                <form method="get" class="space-y-4">
                    <div class="grid grid-cols-1 gap-4 md:grid-cols-3 lg:grid-cols-5">
                        <!-- Búsqueda por nombre -->
                        <input type="text" name="nombre" value="{{ filtros.nombre }}" placeholder="Buscar por nombre..." class="rounded-lg border border-border-dark bg-slate-900/50 px-3 py-2 text-slate-100 placeholder-slate-500 focus:border-primary focus:outline-none focus:ring-1 focus:ring-primary transition-colors">
                        
                        <!-- Precio mínimo -->
                        <input type="number" name="minPrice" value="{{ filtros.minPrice }}" placeholder="Precio mín." min="0" step="0.01" class="rounded-lg border border-border-dark bg-slate-900/50 px-3 py-2 text-slate-100 placeholder-slate-500 focus:border-primary focus:outline-none focus:ring-1 focus:ring-primary transition-colors">
                        
                        <!-- Precio máximo -->
                        <input type="number" name="maxPrice" value="{{ filtros.maxPrice }}" placeholder="Precio máx." min="0" step="0.01" class="rounded-lg border border-border-dark bg-slate-900/50 px-3 py-2 text-slate-100 placeholder-slate-500 focus:border-primary focus:outline-none focus:ring-1 focus:ring-primary transition-colors">
                        
                        <!-- Ordenamiento -->
                        <select name="orderBy" class="rounded-lg border border-border-dark bg-slate-900/50 px-3 py-2 text-slate-100 focus:border-primary focus:outline-none focus:ring-1 focus:ring-primary transition-colors">
                            <option value="nombre" {{ filtros.orderBy == 'nombre' ? 'selected' : '' }}>Ordenar por nombre</option>
                            <option value="precio" {{ filtros.orderBy == 'precio' ? 'selected' : '' }}>Ordenar por precio</option>
                            <option value="id" {{ filtros.orderBy == 'id' ? 'selected' : '' }}>Más recientes</option>
                        </select>

                        <!-- Dirección ordenamiento -->
                        <select name="orderDir" class="rounded-lg border border-border-dark bg-slate-900/50 px-3 py-2 text-slate-100 focus:border-primary focus:outline-none focus:ring-1 focus:ring-primary transition-colors">
                            <option value="ASC" {{ filtros.orderDir == 'ASC' ? 'selected' : '' }}>Ascendente</option>
                            <option value="DESC" {{ filtros.orderDir == 'DESC' ? 'selected' : '' }}>Descendente</option>
                        </select>
                    </div>
                    
                    <div class="flex gap-3">
                        <button type="submit" class="inline-flex items-center gap-2 rounded-lg bg-primary px-4 py-2 font-semibold text-white hover:bg-pink-600 transition-colors">
                            <span class="material-symbols-outlined">search</span>
                            Buscar
                        </button>
                        <a href="{{ path('app_producto_index') }}" class="inline-flex items-center gap-2 rounded-lg border border-border-dark px-4 py-2 font-semibold text-slate-300 hover:bg-slate-900/50 transition-colors">
                            <span class="material-symbols-outlined">clear</span>
                            Limpiar
                        </a>
                    </div>
                </form>
            </div>

            <!-- Tabla de Productos -->
            {% if productos|length > 0 %}
                <div class="overflow-hidden rounded-lg border border-border-dark bg-surface-dark shadow">
                    <table class="w-full divide-y divide-border-dark">
                        <thead class="bg-slate-900/50">
                            <tr>
                                <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-slate-300">Imagen</th>
                                <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-slate-300">Nombre</th>
                                <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-slate-300">Categoría</th>
                                <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-slate-300">Precio</th>
                                <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-slate-300">Estado</th>
                                <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-slate-300">Acciones</th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-border-dark">
                            {% for producto in productos %}
                                <tr class="hover:bg-slate-900/30 transition-colors">
                                    <!-- Imagen -->
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        {% if producto.imagenUrl %}
                                            <img src="{{ producto.imagenUrl }}" alt="{{ producto.nombre }}" class="h-10 w-10 rounded object-cover">
                                        {% else %}
                                            <div class="h-10 w-10 rounded bg-slate-700 flex items-center justify-center">
                                                <span class="material-symbols-outlined text-slate-500" style="font-size: 18px;">image</span>
                                            </div>
                                        {% endif %}
                                    </td>

                                    <!-- Nombre -->
                                    <td class="px-6 py-4 text-sm font-medium">{{ producto.nombre }}</td>

                                    <!-- Categoría -->
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-400">
                                        {% if producto.categoria %}
                                            {{ producto.categoria.nombre }}
                                        {% else %}
                                            <span class="text-slate-600">Sin categoría</span>
                                        {% endif %}
                                    </td>

                                    <!-- Precio -->
                                    <td class="px-6 py-4 whitespace-nowrap text-sm font-semibold text-primary">
                                        {{ producto.precio ? '€' ~ producto.precio : 'N/A' }}
                                    </td>

                                    <!-- Estado -->
                                    <td class="px-6 py-4 whitespace-nowrap text-sm">
                                        {% if producto.activo %}
                                            <span class="inline-flex items-center gap-1 rounded-full bg-green-900/30 px-3 py-1 text-xs font-medium text-green-400">
                                                <span class="material-symbols-outlined" style="font-size: 14px;">check_circle</span>
                                                Activo
                                            </span>
                                        {% else %}
                                            <span class="inline-flex items-center gap-1 rounded-full bg-slate-700/30 px-3 py-1 text-xs font-medium text-slate-400">
                                                <span class="material-symbols-outlined" style="font-size: 14px;">cancel</span>
                                                Inactivo
                                            </span>
                                        {% endif %}
                                    </td>

                                    <!-- Acciones -->
                                    <td class="px-6 py-4 whitespace-nowrap text-sm">
                                        <div class="flex items-center gap-3">
                                            <a href="{{ path('app_producto_show', {'id': producto.id}) }}" class="text-slate-400 hover:text-primary transition-colors" title="Ver">
                                                <span class="material-symbols-outlined">visibility</span>
                                            </a>
                                            <a href="{{ path('app_producto_edit', {'id': producto.id}) }}" class="text-slate-400 hover:text-primary transition-colors" title="Editar">
                                                <span class="material-symbols-outlined">edit</span>
                                            </a>
                                            <form method="POST" action="{{ path('app_producto_delete', {'id': producto.id}) }}" style="display:inline;" onsubmit="return confirm('¿Eliminar este producto?');">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ producto.id) }}">
                                                <button type="submit" class="text-slate-400 hover:text-red-500 transition-colors" title="Eliminar" style="background:none; border:none; cursor:pointer;">
                                                    <span class="material-symbols-outlined">delete</span>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% else %}
                <div class="rounded-lg border border-border-dark bg-surface-dark p-12 text-center">
                    <span class="material-symbols-outlined mx-auto block mb-4 text-4xl text-slate-600">inbox</span>
                    <p class="text-slate-400 mb-4">No hay productos disponibles</p>
                    <a href="{{ path('app_producto_new') }}" class="inline-flex items-center gap-2 rounded-lg bg-primary px-4 py-2 font-semibold text-white hover:bg-pink-600 transition-colors">
                        <span class="material-symbols-outlined">add</span>
                        Crear primer producto
                    </a>
                </div>
            {% endif %}
        </div>
    </main>
{% endblock %}
