<form method="post" action="{{ path('app_producto_delete', {'id': producto.id}) }}" onsubmit="return confirm('¿Estás seguro de que quieres eliminar este producto? Esta acción no se puede deshacer.');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ producto.id) }}" />
    <button type="submit" class="inline-flex items-center gap-2 rounded-lg bg-red-600/90 px-4 py-2 font-semibold text-white hover:bg-red-700 transition-colors">
        <span class="material-symbols-outlined">delete</span>
        Eliminar Producto
    </button>
</form>
