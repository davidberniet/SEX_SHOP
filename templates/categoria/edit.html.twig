{% extends 'base.html.twig' %}

{% block title %}Editar Categoría{% endblock %}

{% block body %}
    <main class="flex-1 bg-gradient-to-b from-background-dark to-surface-dark">
        <div class="mx-auto max-w-2xl px-4 py-12 sm:px-6 lg:px-8">
            <!-- Encabezado -->
            <div class="mb-8">
                <a href="{{ path('app_categoria_index') }}" class="inline-flex items-center gap-2 text-primary hover:text-pink-400 transition-colors mb-4">
                    <span class="material-symbols-outlined">arrow_back</span>
                    Volver a categorías
                </a>
                <h1 class="text-3xl font-bold tracking-tight">Editar Categoría</h1>
                <p class="mt-2 text-sm text-slate-400">{{ categoria.nombre }}</p>
            </div>

            <!-- Formulario -->
            <div class="rounded-lg border border-border-dark bg-surface-dark p-8 shadow mb-8">
                {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
                    <div>
                        {{ form_label(form.nombre, 'Nombre de la Categoría *', {'label_attr': {'class': 'block text-sm font-semibold text-slate-300 mb-2'}}) }}
                        {{ form_widget(form.nombre, {'attr': {'class': 'w-full rounded-lg border border-border-dark bg-slate-900/50 px-3 py-2 text-slate-100 placeholder-slate-500 focus:border-primary focus:outline-none focus:ring-1 focus:ring-primary transition-colors'}}) }}
                        {% if form.nombre.vars.errors %}
                            <div class="mt-1 text-sm text-red-400">{{ form_errors(form.nombre) }}</div>
                        {% endif %}
                    </div>

                    <div>
                        {{ form_label(form.descripcion, 'Descripción', {'label_attr': {'class': 'block text-sm font-semibold text-slate-300 mb-2'}}) }}
                        {{ form_widget(form.descripcion, {'attr': {'class': 'w-full rounded-lg border border-border-dark bg-slate-900/50 px-3 py-2 text-slate-100 placeholder-slate-500 focus:border-primary focus:outline-none focus:ring-1 focus:ring-primary transition-colors', 'rows': '4'}}) }}
                        {% if form.descripcion.vars.errors %}
                            <div class="mt-1 text-sm text-red-400">{{ form_errors(form.descripcion) }}</div>
                        {% endif %}
                    </div>

                    <div class="flex gap-3 border-t border-border-dark pt-6">
                        <button type="submit" class="inline-flex items-center gap-2 rounded-lg bg-primary px-6 py-2 font-semibold text-white hover:bg-pink-600 transition-colors">
                            <span class="material-symbols-outlined">save</span>
                            Guardar cambios
                        </button>
                        <a href="{{ path('app_categoria_index') }}" class="inline-flex items-center gap-2 rounded-lg border border-border-dark px-6 py-2 font-semibold text-slate-300 hover:bg-slate-900/50 transition-colors">
                            <span class="material-symbols-outlined">close</span>
                            Cancelar
                        </a>
                    </div>
                {{ form_end(form) }}
            </div>

            <!-- Sección de peligro -->
            <div class="rounded-lg border border-red-900/30 bg-red-900/10 p-6">
                <h3 class="text-lg font-semibold text-red-400 mb-4 flex items-center gap-2">
                    <span class="material-symbols-outlined">warning</span>
                    Zona de peligro
                </h3>
                <p class="text-sm text-slate-400 mb-4">Esta acción no se puede deshacer. Elimina la categoría permanentemente.</p>
                <form method="post" action="{{ path('app_categoria_delete', {'id': categoria.id}) }}" onsubmit="return confirm('¿Estás seguro de que quieres eliminar esta categoría? Los productos no se eliminarán.');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ categoria.id) }}" />
                    <button type="submit" class="inline-flex items-center gap-2 rounded-lg bg-red-600/90 px-4 py-2 font-semibold text-white hover:bg-red-700 transition-colors">
                        <span class="material-symbols-outlined">delete</span>
                        Eliminar Categoría
                    </button>
                </form>
            </div>
        </div>
    </main>
{% endblock %}
