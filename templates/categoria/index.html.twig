{% extends 'base.html.twig' %}

{% block title %}Gestión de Categorías{% endblock %}

{% block body %}
    <main class="flex-1 bg-gradient-to-b from-background-dark to-surface-dark">
        <div class="mx-auto max-w-6xl px-4 py-12 sm:px-6 lg:px-8">

            <div class="mb-6">
                <a href="{{ path('app_admin_dashboard') }}" class="inline-flex items-center gap-2 rounded-lg bg-slate-900/50 px-4 py-2 text-sm font-medium text-slate-300 border border-border-dark hover:bg-primary/10 hover:text-primary hover:border-primary/30 transition-all shadow-sm">
                    <span class="material-symbols-outlined" style="font-size: 18px;">grid_view</span>
                    Volver al Panel de Administración
                </a>
            </div>
            
            <!-- Encabezado -->
            <div class="mb-8 flex items-center justify-between">
                <div>
                    <h1 class="text-3xl font-bold tracking-tight">Gestión de Categorías</h1>
                    <p class="mt-2 text-sm text-slate-400">{{ categorias|length }} categoría(s) disponible(s)</p>
                </div>
                <a href="{{ path('app_categoria_new') }}" class="inline-flex items-center gap-2 rounded-lg bg-primary px-4 py-2 font-semibold text-white hover:bg-pink-600 transition-colors">
                    <span class="material-symbols-outlined">add</span>
                    Nueva Categoría
                </a>
            </div>

            <!-- Tabla de Categorías -->
            {% if categorias|length > 0 %}
                <div class="overflow-hidden rounded-lg border border-border-dark bg-surface-dark shadow">
                    <table class="w-full divide-y divide-border-dark">
                        <thead class="bg-slate-900/50">
                            <tr>
                                <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-slate-300">Nombre</th>
                                <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-slate-300">Descripción</th>
                                <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-slate-300">Productos</th>
                                <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-slate-300">Acciones</th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-border-dark">
                            {% for categoria in categorias %}
                                <tr class="hover:bg-slate-900/30 transition-colors">
                                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">{{ categoria.nombre }}</td>
                                    <td class="px-6 py-4 text-sm text-slate-400 max-w-xs truncate">
                                        {{ categoria.descripcion ?: 'Sin descripción' }}
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm">
                                        <span class="inline-flex items-center gap-1 rounded-full bg-primary/20 px-3 py-1 text-xs font-medium text-primary">
                                            {{ categoria.productos|length }}
                                        </span>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm">
                                        <div class="flex items-center gap-3">
                                            <a href="{{ path('app_categoria_show', {'id': categoria.id}) }}" class="text-slate-400 hover:text-primary transition-colors" title="Ver">
                                                <span class="material-symbols-outlined">visibility</span>
                                            </a>
                                            <a href="{{ path('app_categoria_edit', {'id': categoria.id}) }}" class="text-slate-400 hover:text-primary transition-colors" title="Editar">
                                                <span class="material-symbols-outlined">edit</span>
                                            </a>
                                            <form method="POST" action="{{ path('app_categoria_delete', {'id': categoria.id}) }}" style="display:inline;" onsubmit="return confirm('¿Eliminar esta categoría? Los productos no se eliminarán.');">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ categoria.id) }}">
                                                <button type="submit" class="text-slate-400 hover:text-red-500 transition-colors" title="Eliminar" style="background:none; border:none; cursor:pointer;">
                                                    <span class="material-symbols-outlined">delete</span>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% else %}
                <div class="rounded-lg border border-border-dark bg-surface-dark p-12 text-center">
                    <span class="material-symbols-outlined mx-auto block mb-4 text-4xl text-slate-600">folder</span>
                    <p class="text-slate-400 mb-4">No hay categorías disponibles</p>
                    <a href="{{ path('app_categoria_new') }}" class="inline-flex items-center gap-2 rounded-lg bg-primary px-4 py-2 font-semibold text-white hover:bg-pink-600 transition-colors">
                        <span class="material-symbols-outlined">add</span>
                        Crear primera categoría
                    </a>
                </div>
            {% endif %}
        </div>
    </main>
{% endblock %}
