{% extends 'base.html.twig' %}

{% block title %}Crear Atributo{% endblock %}

{% block body %}
    <main class="flex-1 bg-gradient-to-b from-background-dark to-surface-dark">
        <div class="mx-auto max-w-2xl px-4 py-12 sm:px-6 lg:px-8">

            <div class="mb-6">
                <a href="{{ path('app_admin_dashboard') }}" class="inline-flex items-center gap-2 rounded-lg bg-slate-900/50 px-4 py-2 text-sm font-medium text-slate-300 border border-border-dark hover:bg-primary/10 hover:text-primary hover:border-primary/30 transition-all shadow-sm">
                    <span class="material-symbols-outlined" style="font-size: 18px;">grid_view</span>
                    Volver al Panel de Administración
                </a>
            </div>
            
            <!-- Encabezado -->
            <div class="mb-8">
                <a href="{{ path('app_atributo_index') }}" class="inline-flex items-center gap-2 text-primary hover:text-pink-400 transition-colors mb-4">
                    <span class="material-symbols-outlined">arrow_back</span>
                    Volver a atributos
                </a>
                <h1 class="text-3xl font-bold tracking-tight">Crear Nuevo Atributo</h1>
                <p class="mt-2 text-slate-400">Define un atributo para crear variaciones de productos</p>
            </div>

            <!-- Formulario -->
            <div class="rounded-lg border border-border-dark bg-surface-dark p-8 shadow">
                {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}

                <div>
                    {{ form_label(form.nombre, 'Nombre del Atributo', {'label_attr': {'class': 'block text-sm font-semibold text-slate-200 mb-2'}}) }}
                    {{ form_widget(form.nombre, {'attr': {'class': 'w-full rounded-lg border border-border-dark bg-slate-900/50 px-4 py-2 text-slate-100 focus:border-primary focus:outline-none focus:ring-2 focus:ring-primary/20'}}) }}
                    {{ form_errors(form.nombre) }}
                    <p class="mt-1 text-xs text-slate-500">Ej: Color, Tamaño, Intensidad</p>
                </div>

                <!-- Valores del atributo -->
                <div>
                    <label class="block text-sm font-semibold text-slate-200 mb-4">Valores del Atributo</label>
                    <div id="atributo-valores" data-prototype="{{ form_widget(form.valores.vars.prototype)|e('html_attr') }}" class="space-y-2">
                        {% for valorField in form.valores %}
                            <div class="flex gap-2">
                                {{ form_widget(valorField, {'attr': {'class': 'flex-1 rounded-lg border border-border-dark bg-slate-900/50 px-4 py-2 text-slate-100'}}) }}
                                <button type="button" class="text-red-400 hover:text-red-300" onclick="this.parentElement.remove()">
                                    <span class="material-symbols-outlined">delete</span>
                                </button>
                            </div>
                        {% endfor %}
                    </div>
                    {{ form_errors(form.valores) }}
                    <button type="button" class="mt-3 inline-flex items-center gap-2 rounded-lg border border-primary bg-primary/10 px-3 py-1 text-sm font-semibold text-primary hover:bg-primary/20 transition-colors" onclick="addValor()">
                        <span class="material-symbols-outlined">add</span>
                        Agregar Valor
                    </button>
                </div>

                <!-- Acciones -->
                <div class="flex gap-3 pt-6 border-t border-border-dark">
                    <button type="submit" class="rounded-lg bg-primary px-6 py-2 font-semibold text-white hover:bg-pink-600 transition-colors">
                        Crear Atributo
                    </button>
                    <a href="{{ path('app_atributo_index') }}" class="rounded-lg border border-border-dark bg-slate-900/30 px-6 py-2 font-semibold text-slate-300 hover:bg-slate-900/50 transition-colors">
                        Cancelar
                    </a>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </main>

    <script>
        function addValor() {
            const container = document.getElementById('atributo-valores');
            const prototype = container.getAttribute('data-prototype');
            const newIndex = container.children.length;
            const newHtml = prototype.replace(/__name__/g, newIndex);
            
            const wrapper = document.createElement('div');
            wrapper.className = 'flex gap-2';
            wrapper.innerHTML = newHtml + `
                <button type="button" class="text-red-400 hover:text-red-300" onclick="this.parentElement.remove()">
                    <span class="material-symbols-outlined">delete</span>
                </button>
            `;
            container.appendChild(wrapper);
        }
    </script>
{% endblock %}
